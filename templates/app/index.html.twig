{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}

    <h3>Search for people who speak any of these languages: {{ languages|join(',') }}</h3>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Speaks</th>
            <th>->></th>
{#            <th>Visited</th>#}
        </tr>
        </thead>
        <tbody>
        {% for person in persons|slice(0, 30) %}
            <tr>
                <td>{{ person.name }}</td>
                <td>{{ person.speaks ? 'YES' : 'NO' }}</td>
                <td>{{ person.info.languages|join(',') }}</td>
                <td>{{ person.languagesText|default('~') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
